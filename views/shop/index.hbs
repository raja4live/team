{{# each products }}
<div class="row">
  {{# each this }}
     <div class="col-sm-6 col-md-4">
       <div class="thumbnail">
         <a target="_blank"  href="https://www.amazon.in/gp/product/B01N29WP7D/ref=as_li_tl?ie=UTF8&camp=3638&creative=24630&creativeASIN=B01N29WP7D&linkCode=as2&tag=lootscart84-21&linkId=d52dbe0f2c3e5a8bc7b269d6e051f275"><img border="0" src="//ws-in.amazon-adsystem.com/widgets/q?_encoding=UTF8&MarketPlace=IN&ASIN=B01N29WP7D&ServiceVersion=20070822&ID=AsinImage&WS=1&Format=_SL250_&tag=lootscart84-21" ></a><img src="//ir-in.amazon-adsystem.com/e/ir?t=lootscart84-21&l=am2&o=31&a=B01N29WP7D" width="1" height="1" border="0" alt="" style="border:none !important; margin:0px !important;" />
         <div class="caption">
            <h3>{{ this.title }}</h3>
            <p class="description">{{ this.description }}</p>
              <div class="price ">Price: INR.{{ this.price }}</div>
              <div class="price ">Sale: INR.{{ this.sale }}</div>
              <div class="price ">Discount: {{ this.discount }}</div>
              <div class="price ">{{ this.company }}</div>
             <div class="clearfix">
              
                <a href="{{ this.link }}" class="btn btn-primary pull-left" role="button">Buy </a>
 
               <a href="/add-to-cart/{{this._id}}" class="btn btn-primary pull-right" role="button">Add To Shopping-Cart </a>
             </div>
          </div>
        </div>
      </div>
   {{/each}}
</div>
{{/each}}
